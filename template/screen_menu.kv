<ScreenMenu>:
    id: menu_screen

    AnchorLayout:
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.5, 0.8
            spacing: 20

            LabelSB:
                size_hint_y: 0.2
                font_size: 40
                text_id: 'select_action'

            BoxLayout:
                orientation: "horizontal"
                spacing: 20
                size_hint_y: 0.6
                ButtonLight:
                    text_id: 'buy'
                    on_release:
                        root.buy_crypto()
                ButtonDark:
                    text: app._languages[app._selected_language]['sell']
                    on_release:
                        root.sell_crypto()


            BoxLayout:
                orientation: "horizontal"
                spacing: 20
                size_hint_y: 0.3
                ButtonDark:
                    disabled: True
                    markup: True
                    text: app._languages[app._selected_language]['phone_credit'] + "\n[size=15]" + app._languages[app._selected_language]['coming_soon'] + "[/size]"
                ButtonDark:
                    disabled: True
                    markup: True
                    text: app._languages[app._selected_language]['investment'] + "\n[size=15]" + app._languages[app._selected_language]['coming_soon'] + "[/size]"
