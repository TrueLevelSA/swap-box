<ScreenMenu>:
    id: menu_screen

    AnchorLayout:
        size: self.parent.size
        anchor_x: 'center'
        anchor_y: 'center'

        BoxLayout:
            orientation: "vertical"
            size_hint: 0.5, 0.8
            spacing: 20

            TitleLabel:
                size_hint_y: 0.2
                text: app._languages[app._selected_language]['select_action']

            BoxLayout:
                orientation: "horizontal"
                spacing: 20
                size_hint_y: 0.6
                ButtonLight:
                    text: app._languages[app._selected_language]['buy']
                    on_release:
                        root.buy_crypto()
                ButtonBase:
                    text: app._languages[app._selected_language]['sell']
                    on_release:
                        root.sell_crypto()


            BoxLayout:
                orientation: "horizontal"
                spacing: 20
                size_hint_y: 0.3
                ButtonComingSoon:
                    text: app._languages[app._selected_language]['phone_credit'] + "\n[size=15]" + app._languages[app._selected_language]['coming_soon'] + "[/size]"
                ButtonComingSoon:
                    text: app._languages[app._selected_language]['investment'] + "\n[size=15]" + app._languages[app._selected_language]['coming_soon'] + "[/size]"

<TokenListItem>:
    orientation: "horizontal"
    canvas.before:
        Color:
            rgba: (0.7, 0.7, 0.7, 1.0) if self.selected else (1.0, 1.0, 1.0, 1.0)
        Rectangle:
            size: self.size
            pos: self.pos
    value: ''
    padding: 10
    Image:
        size_hint_x: 0.2
        source: root.value
    Label:
        size_hint_x: 1
        id: name
        font_size: 40
        color: "black"
    Label:
        size_hint_x: 1
        id: price
        font_size: 40
        color: "black"
    Label:
        size_hint_x: 1
        id: network
        font_size: 40
        color: "grey"

<TokensRecycleView@RecycleView>:
    viewclass: 'TokenListItem'
    SelectableRecycleBoxLayout:
        default_size: None, dp(112)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'


<ScreenSelectCrypto>:
    id: select_crypto_screen
    TokensRecycleView:
        id: rv_tokens
        halign: "center"
